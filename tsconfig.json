{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["es2015", "es2015.iterable", "dom"],
    "outDir": "./build/cjs",
    "declaration": true,
    "downlevelIteration": true,
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "noImplicitAny": true
  },
  "typeAcquisition": { "enable": true },
  "exclude": ["node_modules", "**/*.spec.ts", "build", "es6", "docs"]
}
